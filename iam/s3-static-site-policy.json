{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Sid": "PublicReadGetObject",
      "Effect": "Allow",
      "Principal": "*",
      "Action": "s3:GetObject",
      "Resource": [
        "arn:aws:s3:::quickbite-blue/*",
        "arn:aws:s3:::quickbite-green/*"
      ]
    },
    {
      "Sid": "AllowListBucket",
      "Effect": "Allow",
      "Principal": "*",
      "Action": "s3:ListBucket",
      "Resource": [
        "arn:aws:s3:::quickbite-blue",
        "arn:aws:s3:::quickbite-green"
      ]
    }
  ]
}
